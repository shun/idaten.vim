{
  "name": "@shun/idaten-vim",
  "exports": "./mod.ts",
  "license": "MIT",
  "readme": "README.md",
  "tasks": {
    "publish": "deno run --allow-run --allow-read scripts/publish.ts",
    "publish:dry-run": "deno run --allow-run --allow-read scripts/publish.ts --dry-run --allow-dirty"
  },
  "lint": {
    "include": [
      "src",
      "denops",
      "mod.ts",
      "docs"
    ],
    "exclude": [
      "tmp"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "include": [
      "src",
      "denops",
      "mod.ts"
    ],
    "exclude": [
      "docs",
      "tmp"
    ],
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "semiColons": true
  }
}
